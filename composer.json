{
  "name": "wpmoo/wpmoo-coding-standards",
  "description": "Shared PHPCS standard and custom sniffs for WPMoo projects.",
  "type": "phpcodesniffer-standard",
  "version": "0.1.0",
  "license": "MIT",
  "homepage": "https://wpmoo.org",
  "authors": [
    {
      "name": "WPMoo",
      "email": "hello@wpmoo.org",
      "homepage": "https://wpmoo.org/"
    }
  ],
  "require": {
    "squizlabs/php_codesniffer": "^3.10",
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
    "wp-coding-standards/wpcs": "^3.0",
    "phpcompatibility/phpcompatibility-wp": "^2.1"
  },
  "autoload": {
    "psr-4": {
      "WPMoo\\": "WPMoo/"
    }
  },
  "extra": {
    "phpcodesniffer-standard": {
      "name": "WPMoo"
    }
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "scripts": {
    "hooks:install": "git config core.hooksPath .githooks && chmod +x .githooks/pre-commit",
    "lint:php": "find . -path './vendor' -prune -o -name '*.php' -print0 | xargs -0 -n1 php -l",
    "phpcs": "vendor/bin/phpcs -n"
  }
}
